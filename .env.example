# 视频配音系统环境配置
# =====================================

# 数据库配置
POSTGRES_DB=dubbing
POSTGRES_USER=dubbing
POSTGRES_PASSWORD=dubbing123
POSTGRES_PORT=5433

# MinIO 对象存储配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=videos
MINIO_API_PORT=9010
MINIO_CONSOLE_PORT=9011
MINIO_PUBLIC_ENDPOINT=localhost:9010

# 对象存储后端选择: minio / oss
STORAGE_BACKEND=oss

# 阿里云 OSS 配置（用于火山 ASR 可访问的公网音频 URL）
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com
OSS_BUCKET=vedio-auto-tran
OSS_PUBLIC_DOMAIN=vedio-auto-tran.oss-cn-beijing.aliyuncs.com
OSS_PREFIX=video-auto-dubbing
OSS_USE_SSL=true

# ⚠️ 请填写你的 AK/SK（建议使用 RAM 子账号，最小权限）
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret

# RabbitMQ 消息队列配置
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_PORT=5673
RABBITMQ_MANAGEMENT_PORT=15673

# API 服务配置
API_PORT=8080

# 网关配置
GATEWAY_HTTP_PORT=80
GATEWAY_HTTPS_PORT=443

# TTS 服务 (你部署的 index-tts-vllm Gradio)
TTS_SERVICE_URL=https://example.com:8443
TTS_BACKEND=vllm
TTS_API_KEY=

# GLM 翻译服务 (请填写你的实际 API Key)
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4-flash

# 火山引擎 ASR 服务 (你的实际凭据)
VOLCENGINE_ASR_APP_KEY=your_volcengine_app_key
VOLCENGINE_ASR_ACCESS_KEY=your_volcengine_access_key
VOLCENGINE_ASR_RESOURCE_ID=volc.bigasr.auc
VOLCENGINE_ASR_ENABLE_SPEAKER_INFO=true
VOLCENGINE_ASR_ENABLE_EMOTION=true
VOLCENGINE_ASR_ENABLE_GENDER=true
VOLCENGINE_ASR_ENABLE_PUNC=true
VOLCENGINE_ASR_ENABLE_ITN=true
