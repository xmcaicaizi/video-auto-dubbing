# =============================================================================
# Video Auto Dubbing - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.prod.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# 1. Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=dubbing
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=dubbing

# -----------------------------------------------------------------------------
# 2. Aliyun DashScope (Required for ASR, LLM, TTS)
# -----------------------------------------------------------------------------
# Get API Key: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# 3. Aliyun OSS (Object Storage)
# -----------------------------------------------------------------------------
STORAGE_BACKEND=oss
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_ENDPOINT=oss-cn-shanghai.aliyuncs.com
OSS_BUCKET=your-bucket-name
OSS_PREFIX=video-auto-dubbing/

# -----------------------------------------------------------------------------
# 4. Application Security
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
SECRET_KEY=generate_a_secure_random_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# -----------------------------------------------------------------------------
# 5. Worker Configuration (Optional)
# -----------------------------------------------------------------------------
WORKER_CONCURRENCY=2
